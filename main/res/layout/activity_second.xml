<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/widthFull"
        android:layout_height="@dimen/heightFull"
        android:contentDescription="@string/supermoon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/supermoon"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/widthFull"
        android:layout_height="@dimen/heightFull"
        android:contentDescription="@string/waterfall"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:srcCompat="@drawable/waterfall" />


</android.support.constraint.ConstraintLayout>